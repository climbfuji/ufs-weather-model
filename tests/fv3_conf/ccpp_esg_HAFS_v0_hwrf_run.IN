rm -fr INPUT RESTART
mkdir INPUT RESTART
if [[ $MACHINE_ID = cheyenne.* ]]; then
  ESG_TMP_INPUT_DIR=/nonexistentdir
  HAFS_TMP_INPUT_DIR=/glade/p/ral/jntp/GMTB/ufs-weather-model/RT/NEMSfv3gfs/FV3_input_data_temporary_hafs
elif [[ $MACHINE_ID = hera.* ]]; then
  ESG_TMP_INPUT_DIR=/scratch1/BMC/gmtb/ufs-weather-model/RT/NEMSfv3gfs/FV3_input_data_regional_esg_temporary
  HAFS_TMP_INPUT_DIR=/scratch1/BMC/gmtb/ufs-weather-model/RT/NEMSfv3gfs/FV3_input_data_temporary_hafs
else
  ESG_TMP_INPUT_DIR=/nonexistentdir
  HAFS_TMP_INPUT_DIR=/nonexistentdir
fi

if [ $WARM_START = .F. ]; then
  rsync -av $ESG_TMP_INPUT_DIR/ ./
else
  echo "ERROR, warmstart runs not configured for regional HAFs runs on ESG grid"
  exit 1
fi

# Copy field table, depending on microphysics choice
if [ $IMP_PHYSICS = 8 ]; then
  ln -sf diag_table.thompson diag_table
else
  echo "ERROR, no diag table configured for IMP_PHYSICS=${IMP_PHYSICS}"
  exit 1
fi

